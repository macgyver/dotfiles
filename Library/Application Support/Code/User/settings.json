{
  "window.zoomLevel": 0,
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "SFMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "html.format.enable": false,
  "html.format.indentHandlebars": true,
  "html.format.wrapAttributes": "auto",
  // todo: re-investigate when either of these bugs gets fixed:
  // - https://github.com/beautify-web/js-beautify/issues/1125
  // - https://github.com/beautify-web/js-beautify/issues/1238
  "html.format.enable": false,
  "prettier.requireConfig": true,
  "prettier.disableLanguages": [],
  "python.formatting.provider": "none",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ],
  // "vetur.format.scriptInitialIndent": true,
  // "vetur.format.styleInitialIndent": true,
  // "prettier.stylelintIntegration": true,
  // "prettier.eslintIntegration": true
  "prettier.disableLanguages": [] // removes "vue" from the list
}
